<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="125dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_launcher_background"></ImageView>

    <EditText
        android:id="@+id/mobileEdit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImage"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:hint="Mobile Number/Email ID"
        android:textColorHint="#000"></EditText>

    <EditText
        android:id="@+id/passwordEdit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileEdit_login"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:textColorHint="#000"></EditText>

    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEdit_login"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="25dp"
        android:text="Forgot Password?"
        android:textColor="#000"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEdit_login"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_corner_style"
        android:paddingHorizontal="100dp"
        android:paddingVertical="10dp"
        android:text="login"
        android:textColor="#fff"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="Or"
        android:textColor="#000"
        android:textSize="20sp"></TextView>

    <ImageView
        android:id="@+id/facebook_image_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/loginButton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/facebook_image"></ImageView>

    <ImageView
        android:id="@+id/google_image_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/google_logo"></ImageView>

    <TextView
        android:id="@+id/newRegister_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text="New user?Register here..."
        android:textSize="20sp"
        android:textStyle="bold"></TextView>
</RelativeLayout>