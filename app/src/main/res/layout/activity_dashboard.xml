<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg">

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            style="@style/MyCardViewStyle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
            android:layout_weight="1"
            android:id="@+id/card_edit"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="#6A5B73">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_group_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MyCardViewStyle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:id="@+id/card_effect"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="#6A5B73">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

            <ImageView
                android:id="@+id/img_effect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_magic_effect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_effect"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:text="Effects"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22dp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:id="@+id/lv1"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            style="@style/MyCardViewStyle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
            android:layout_weight="1"
            android:id="@+id/card_catgor"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="#6A5B73">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_catagories"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_list_cata" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_catagories"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:text="Categories"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MyCardViewStyle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:id="@+id/card_share"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="#6A5B73">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_paper_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_share"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:text="Share"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>